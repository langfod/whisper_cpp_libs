{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Release with CUDA",
      "generator": "Ninja",      
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CUDA_RUNTIME_LIBRARY": "Static",
        "GGML_CUDA_FORCE_VERSION": "12.9",
        "CUDA_TOOLKIT_ROOT_DIR": "C:/Program Files/NVIDIA GPU Computing Toolkit/CUDA/v12.9",
        "CMAKE_CUDA_ARCHITECTURES": "61-real;72-real;75-real;86-real;80-virtual;89-real;120-real",
        "DGGML_CUDA_FORCE_MMQ": "ON",

        "CMAKE_CXX_FLAGS": "/permissive- /Zc:preprocessor /EHsc /MP16 /W4 /utf-8 /bigobj /favor:blend",
        "CMAKE_C_FLAGS_RELEASE": "/O2 /Ob2 /DNDEBUG /DWIN32_LEAN_AND_MEAN /DNOMINMAX /DUNICODE /D_UNICODE",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /Ob2 /DNDEBUG /DWIN32_LEAN_AND_MEAN /DNOMINMAX /DUNICODE /D_UNICODE /bigobj",

        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "release-static",
      "displayName": "Release with CUDA",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release-static",
      "cacheVariables": {
        "DYNAMIC_LIBS": "OFF"
      }
    },
    {
      "name": "release-dynamic",
      "displayName": "Release with CUDA",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/release-dynamic",
      "cacheVariables": {
        "DYNAMIC_LIBS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release-static",
      "configurePreset": "release-static",
      "displayName": "Build Release with CUDA"
    },
    {
      "name": "release-dynamic",
      "configurePreset": "release-dynamic",
      "displayName": "Build Release dynamic ggml"
    }
  ]
}
